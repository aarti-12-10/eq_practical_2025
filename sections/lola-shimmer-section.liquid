<section class="elite-story-section">
  <div class="container">
    <div class="elite-content {% if section.settings.reverse_layout %}reverse-layout{% endif %}">
      <div class="elite-text-right">
        <div class="mb-450">
        <p class="elight-star">★★★★★</p>
        <h3>{{ section.settings.story_title }}</h3>
        <p class="elight-desc">{{ section.settings.story_description }}</p>
        <a href="{{ section.settings.button_link }}" class="btn">{{ section.settings.button_label }}</a>
        </div>
      </div>
      <div class="elite-image-left">
        <img src="{{ section.settings.main_image | image_url: width: 800 }}" alt="Main Image">
        <p class="elite-caption">{{ section.settings.main_image_caption }}</p>
      </div>      
    </div>
  </div>
</section>

<style>
.elite-story-section {
  padding: 80px 20px;
  text-align: center;
  background: #fff;
  font-family: 'Helvetica Neue', sans-serif;
}
.container {
    max-width: 1400px;
    margin: 0 auto;
    margin-bottom: 60px;
}
.elite-header {
  max-width: 800px;
  margin: 0 auto 60px;
}
.elite-quote {
    font-size: 34px;
    line-height: 100%;
    color: #333;
    font-weight: 500;
}
.elite-subtitle {
    font-size: 14px;
    color: #999;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-top: 22px;
}
.elite-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
   align-items: start;
  gap: 70px;
  max-width: 1100px;
  margin: 0 auto;
}
.elite-image-left img {
  width: 100%;
}
.elite-caption {
    color: #212121;
    margin-top: 10px;
    font-size: 15px;
    line-height: 100%;
    font-weight: 500 !important;
}
.elite-text-right {
  text-align: left;
}
p.elight-star {
    color: #E8E4DF;
    font-size: 24px;
    margin: 0;
    margin-bottom: 20px;
}
.elite-text-right h3 {
    font-size: 27px;
    margin-bottom: 15px !important;
    color: #212121;
    margin: 0;
    line-height: 100%;
    font-weight: 500;
}
p.elight-desc {
    font-size: 15px;
    color: #555;
    margin-bottom: 30px;
    font-weight: 500;
}
.elite-text-right:before {
    content: "";
    position: absolute;
    top: 360px;
    left: 0;
    width: 381px;
    height: 381px;
  background-image: url("{{ section.settings.bg_image | image_url }}");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
}
.elite-text-right .btn {
  background: #fff;
  border: 1px solid #333;
  padding: 18px 30px;
  text-decoration: none;
  font-weight: 500;
  color: #111;
  border-radius: 4px;
  transition: all 0.3s ease;
}
.elite-text-right .btn:hover {
  background: #111;
  color: #fff;
}
.elite-image-small {
  max-width: 300px;
  margin: 40px auto 0;
}
.elite-image-small img {
  width: 100%;
  border-radius: 6px;
}
.elite-text-right:before {
    content: "";
    position: absolute;
    top: 270px;
    left: 0;
    width: 381px;
    height: 381px;
    background-image: url("{{ section.settings.bg_image | image_url }}");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
}
.elite-text-right{
  position:relative;
  top: 100px;
}
.mb-450 {
    margin-bottom: 450px;
}
@media (max-width: 768px) {
 .elite-content {
    display: flex;
    flex-direction: columns;
}
.elite-text-right {
    width: 100%;
    text-align: center;
    top: 0;
}
.elite-text-right:before {
    width: 100%;
}
.mb-450 {
    margin-bottom: 450px;
}
.container {
    margin-bottom: 20px;
}
  .elite-content.reverse-layout .elite-image-left {
    order: 2 !important;
  }
  .elite-content.reverse-layout .elite-text-right {
    order: 1 !important;
  }
}
</style>

{% schema %}
{
  "name": "Elite Story Section",
  "settings": [ 
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "text",
      "id": "main_image_caption",
      "label": "Main Image Caption",
      "default": "Elite Spliced Multifit One Piece"
    },
    {
      "type": "text",
      "id": "story_title",
      "label": "Story Title",
      "default": "The Elite Story"
    },
    {
      "type": "textarea",
      "id": "story_description",
      "label": "Story Description",
      "default": "Discover our Elite Spliced Multifit One Piece..."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Elite One Piece"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    }

  ],
  "presets": [
    {
      "name": "Elite Story Section"
    }
  ]
}
{% endschema %}
