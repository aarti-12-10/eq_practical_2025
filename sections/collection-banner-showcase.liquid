{% schema %}
{
  "name": "scroll with image",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Main Section Heading",
      "default": "Black Friday"
    }
  ],
  "blocks": [
    {
      "type": "collection_block",
      "name": "Collection Banner",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select Collection"
        },
        {
          "type": "text",
          "id": "overlay_text",
          "label": "Overlay Text",
          "default": "Black Friday"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Shop Now"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "scroll with image",
      "category": "Collection"
    }
  ]
}
{% endschema %}

<section class="collection-banner-section">
  <div class="collection-banner-grid">
    {% for block in section.blocks %}
      {% assign col = collections[block.settings.collection] %}
      {% if col %}
        <div class="collection-banner-card">
          <a href="{{ col.url }}" class="collection-banner-link">
            {% if col.image %}
              <img src="{{ col.image | img_url: '900x900' }}" alt="{{ col.title }}" loading="lazy">
            {% elsif col.products.first %}
              <img src="{{ col.products.first.featured_image | img_url: '900x900' }}" alt="{{ col.title }}" loading="lazy">
            {% else %}
              <div class="no-image">No Image Available</div>
            {% endif %}

            <div class="overlay">
              <h2 class="overlay-text">{{ block.settings.overlay_text }}</h2>
              {% if block.settings.button_text != blank %}
                <span class="overlay-btn">{{ block.settings.button_text }}</span>
              {% endif %}
            </div>
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

<style>
.collection-banner-section {
  width: 100%;
  overflow: hidden;
  background: #fff;
}

.collection-banner-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 0;
}

.collection-banner-card {
  position: relative;
  overflow: hidden;
}

.collection-banner-card img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.collection-banner-card:hover img {
  transform: scale(1.05);
}

.overlay {
  position: absolute;
  inset: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  color: #fff;
  background: rgba(0, 0, 0, 0.25);
  opacity: 0;
  transition: opacity 0.4s ease;
}

.collection-banner-card:hover .overlay {
  opacity: 1;
}

.overlay-text {
  font-size: 42px;
  font-weight: 700;
  text-transform: uppercase;
  color: #fff;
  letter-spacing: 1px;
  margin: 0;
}

.overlay-btn {
  margin-top: 10px;
  display: inline-block;
  background: #fff;
  color: #000;
  padding: 8px 20px;
  border-radius: 30px;
  font-size: 14px;
  text-transform: uppercase;
  transition: background 0.3s ease, color 0.3s ease;
}

.overlay-btn:hover {
  background: #000;
  color: #fff;
}

.no-image {
  background-color: #f5f5f5;
  height: 400px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 14px;
}

@media (max-width: 768px) {
  .overlay-text {
    font-size: 28px;
  }
}
</style>
