<div class="two-image-promo">
  <div class="promo-grid">
    <div class="promo-item promo-item1">
      {% if section.settings.left_link %}
        <a href="{{ section.settings.left_link }}" class="promo-link">
      {% endif %}
        {% if section.settings.left_image %}
          <img src="{{ section.settings.left_image | img_url: 'master' }}" alt="{{ section.settings.left_heading }}" loading="lazy">
        {% endif %}
        <div class="promo-content">
          {% if section.settings.left_subheading %}
            <p class="promo-subheading font-13">{{ section.settings.left_subheading }}</p>
          {% endif %}
          {% if section.settings.left_heading %}
            <h3 class="promo-heading font-22">{{ section.settings.left_heading }}</h3>
          {% endif %}
          <div class="promo-button">
            <a href="{{ section.settings.left_link }}" class="custom-button font-15">Shop New</a>
          </div>
        </div>
      {% if section.settings.left_link %}
        </a>
      {% endif %}
    </div>

    <div class="promo-item promo-item2">
      {% if section.settings.right_link %}
        <a href="{{ section.settings.right_link }}" class="promo-link">
      {% endif %}
        {% if section.settings.right_image %}
          <img src="{{ section.settings.right_image | img_url: 'master' }}" alt="{{ section.settings.right_heading }}" loading="lazy">
        {% endif %}
        <div class="promo-content">
          {% if section.settings.right_subheading %}
            <p class="promo-subheading font-13">{{ section.settings.right_subheading }}</p>
          {% endif %}
          {% if section.settings.right_heading %}
            <h3 class="promo-heading font-22">{{ section.settings.right_heading }}</h3>
          {% endif %}
        </div>
      {% if section.settings.right_link %}
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
.two-image-promo {
  background-color: #f4f2ef;
  padding: 80px;
}

.promo-grid {
  display: flex;
  align-items: stretch;
  justify-content: space-between;
  gap: 20px;
  max-width: 1400px;
  margin: 0 auto;
}

.promo-item {
  position: relative;
  overflow: hidden;
}

.promo-item1 {
  display: flex;
  flex: 0 0 calc(45% - 10px);
}

.promo-item2 {
  flex: 0 0 calc(55% - 10px);
}

.promo-item img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.promo-content {
  position: absolute;
  bottom: 25px;
  left: 25px;
  color: #fff;
}

.promo-subheading {
  text-transform: uppercase;
}

.promo-heading {
 margin: 0;
 color: #fff;
}

.promo-link {
  display: block;
  text-decoration: none;
  color: inherit;
}

/* Mobile responsive */
@media (min-width: 767px) {
.promo-button {
    display: none;
}
}


@media (max-width: 768px) {
  .two-image-promo {
    background: none;
    padding: 0;
  }
  
  .promo-grid {
    display: block;
  }

  .promo-item {
    flex: 1 1 100%;
  }

  .promo-content {
      bottom: 150px;
      left: 45px;
  }
  .promo-heading {
    font-size: 34px;
    margin-bottom: 30px;
  }
  .promo-button {
    display: block;
}
  a.custom-button {
    background: #fff;
    padding: 18px 30px;
    color: #000;
    text-decoration: none;
  }
  /* Slick Dots */
  /* Slick Dots */
.slick-dots {
    display: flex;
    bottom: 10px;
    justify-content: center;
    position: absolute;
    right: 44%;
    color: #fff;
    bottom: -20px;
    font-size: 25px;
    gap: 10px;
}
.slick-dots li {
  margin: 0 5px;
}
.slick-dots li button {
display: none;
}
.slick-dots li button:before {
  font-size: 25px;
  opacity: 0.6;
}
.slick-dots li.slick-active button:before {
  opacity: 1;
}

}
</style>

{% comment %} --- Include Slick Slider in Mobile --- {% endcomment %}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link
  rel="stylesheet"
  type="text/css"
  href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"
/>
<script
  type="text/javascript"
  src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"
></script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    function initSlick() {
      if (window.innerWidth <= 768) {
        if (!$('.promo-grid').hasClass('slick-initialized')) {
          $('.promo-grid').slick({
            dots: true,
            arrows: false,
            infinite: true,
            slidesToShow: 1,
            slidesToScroll: 1,
            autoplay: false,
            autoplaySpeed: 3000,
          });
        }
      } else {
        if ($('.promo-grid').hasClass('slick-initialized')) {
          $('.promo-grid').slick('unslick');
        }
      }
    }

    initSlick();
    window.addEventListener('resize', initSlick);
  });
</script>


