{%- style -%}
/* === spacing === */
.section-{{ section.id }}-padding{padding-top:{{ section.settings.padding_top | times:0.75 | round:0 }}px;padding-bottom:{{ section.settings.padding_bottom | times:0.75 | round:0 }}px}
@media (min-width:750px){.section-{{ section.id }}-padding{padding-top:{{ section.settings.padding_top }}px;padding-bottom:{{ section.settings.padding_bottom }}px}}

.m2-inner{max-width:var(--page-width,120rem);margin:0 auto;padding:0 1.6rem}

/* === heading === */
.m2-head{display:flex;align-items:center;justify-content:space-between;margin:0 0 22px}
.m2-head h2{margin:0}

/* === slider track === */
.m2-track{list-style:none;margin:0;padding:0;display:grid;grid-auto-flow:column;gap:28px;overflow-x:auto;scroll-snap-type:x mandatory;grid-auto-columns:88vw}
.m2-track::-webkit-scrollbar{display:none}
.m2-track{scrollbar-width:none}
@media (min-width:750px){
  .m2-track{grid-auto-columns:calc((100% - 56px)/3)}
}

/* === card === */
.m2-card{position:relative;display:block;border-radius:6px;overflow:hidden;isolation:isolate}
.m2-media{display:block;width:100%;background:#111;aspect-ratio:3/4}
.m2-media img{width:100%;height:100%;object-fit:cover;display:block}
.m2-card::after{content:"";position:absolute;inset:0;background:rgba(0,0,0,.28)}
.m2-title{position:absolute;left:10%;right:10%;top:50%;transform:translateY(-50%);
  text-align:center;color:#fff;font-size:1.8rem;line-height:1.2;font-weight:500;letter-spacing:.02em}
@media (min-width:990px){.m2-title{font-size:2.1rem}}

/* === arrow + progress line === */
.m2-arrowline{
  position:relative;
  margin:30px auto 0;
  max-width:700px;
  height:4px;
  background:#e6e6e6;
  border-radius:999px;
}
.m2-handle{
  position:absolute;
  left:0;
  top:50%;
  transform:translateY(-50%);
  height:6px;
  width:0;
  background:#5a5a5a;
  border-radius:999px;
  z-index:1;
  transition:width .28s ease;
  box-shadow:0 1px 0 rgba(0,0,0,.08);
}
.m2-handle::after{
  content:"";
  position:absolute;
  right:-3px;
  top:0;
  bottom:0;
  width:6px;
  background:inherit;
  border-radius:999px;
}

/* arrows aligned with line ends */
.m2-arrows{
  position:absolute;
  inset:0;
  display:block;
  pointer-events:none;
}
.m2-btn{
  position:absolute;
  top:50%;
  transform:translateY(-50%);
  appearance:none;
  border:0;
  background:transparent;
  width:36px;height:36px;
  display:grid;place-items:center;
  cursor:pointer;
  pointer-events:auto;
}
.m2-btn--prev{ left:-8px; }
.m2-btn--next{ right:-8px; }
.m2-btn svg{ width:16px;height:16px }
.m2-btn--prev svg{ transform:rotate(180deg) }
{%- endstyle -%}

{%- liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif
-%}

<div style="background-color: #fff;">
  <div class="m2-inner section-{{ section.id }}-padding">
    <div class="m2-head">
      <h2 id="SectionHeading-{{ section.id }}" class="inline-richtext {{ section.settings.heading_size }}">
        {{ section.settings.title | default: 'Our Collections' }}
      </h2>
      {% if section.settings.show_view_all %}
        <a href="{{ routes.collections_url }}" class="link underlined-link">{{ 'sections.collection_list.view_all' | t }}</a>
      {% endif %}
    </div>

    <div id="m2-s-{{ section.id }}">
      <ul id="m2-track-{{ section.id }}" class="m2-track" role="list" aria-label="{{ section.settings.title | escape }}">
        {%- for block in section.blocks -%}
          {%- assign col = block.settings.collection -%}
          <li class="slider__slide" {{ block.shopify_attributes }}>
            {% if col %}
              <a class="m2-card" href="{{ col.url }}">
                <span class="m2-media">
                  {%- if col.featured_image -%}
                    {{ col.featured_image | image_url: width: 1600 | image_tag: loading: 'lazy', sizes: '(max-width: 749px) 88vw, (min-width: 750px) 33vw', widths: '600,800,1000,1200,1400,1600' }}
                  {%- else -%}
                    {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}
                </span>
                <span class="m2-title">{{ col.title }}</span>
              </a>
            {% else %}
              <div class="m2-card">
                <span class="m2-media">{{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}</span>
                <span class="m2-title">{{ 'onboarding.collection_title' | t }}</span>
              </div>
            {% endif %}
          </li>
        {%- endfor -%}
      </ul>

      <!-- line progress + arrows -->
      <div class="m2-arrowline">
        <span class="m2-handle"></span>
        <div class="m2-arrows">
          <button class="m2-btn m2-btn--prev" type="button" aria-label="{{ 'general.slider.previous_slide' | t }}">
            <svg viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M7.5 4L13.5 10L7.5 16" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </button>
          <button class="m2-btn m2-btn--next" type="button" aria-label="{{ 'general.slider.next_slide' | t }}">
            <svg viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M7.5 4L13.5 10L7.5 16" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
(function(){
  const root  = document.getElementById('m2-s-{{ section.id }}');
  if(!root) return;
  const track = document.getElementById('m2-track-{{ section.id }}');
  const btnPrev = root.querySelector('.m2-btn--prev');
  const btnNext = root.querySelector('.m2-btn--next');
  const handle  = root.querySelector('.m2-handle');
  const slides = Array.from(track.children);
  const gap = 28;

  function step(){
    const f = slides[0];
    return f ? f.getBoundingClientRect().width + gap : 0;
  }

  function scrollDir(dir){
    track.scrollBy({ left: dir * step(), behavior: 'smooth' });
  }

  function update(){
    const max = track.scrollWidth - track.clientWidth;
    const sc = track.scrollLeft;
    const pct = max > 0 ? (sc / max) * 100 : 0;
    handle.style.width = pct + '%';
  }

  btnPrev.addEventListener('click', ()=>scrollDir(-1));
  btnNext.addEventListener('click', ()=>scrollDir(1));
  track.addEventListener('scroll', update, { passive:true });
  window.addEventListener('resize', update);
  requestAnimationFrame(update);
})();
</script>

